<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.example.luma-events</string>

    <key>ProgramArguments</key>
    <array>
        <!-- Update these paths for your system -->
        <string>/usr/local/bin/node</string>
        <string>/Users/YOUR_USERNAME/Developer/luma-events/node_modules/.bin/tsx</string>
        <string>/Users/YOUR_USERNAME/Developer/luma-events/src/scheduler/run-with-catchup.ts</string>
    </array>

    <key>WorkingDirectory</key>
    <string>/Users/YOUR_USERNAME/Developer/luma-events</string>

    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin</string>
    </dict>

    <key>RunAtLoad</key>
    <true/>

    <key>StartCalendarInterval</key>
    <dict>
        <key>Hour</key>
        <integer>7</integer>
        <key>Minute</key>
        <integer>0</integer>
    </dict>

    <key>StandardOutPath</key>
    <string>/Users/YOUR_USERNAME/Developer/luma-events/logs/launchd-stdout.log</string>

    <key>StandardErrorPath</key>
    <string>/Users/YOUR_USERNAME/Developer/luma-events/logs/launchd-stderr.log</string>
</dict>
</plist>
